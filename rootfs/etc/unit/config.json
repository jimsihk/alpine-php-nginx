{
  "listeners": {
    "*:8080": {
      "pass": "routes"
    }
  },
  "access_log" : {
    "path": "/dev/stdout"
  },
  "routes": [
    {
      "match": {
        "uri": [
          "/"
        ]
      },
      "action": {
        "pass": "applications/webapp"
      }
    },
    {
      "match": {
        "uri": [
          "*.php",
          "*.php/*"
        ]
      },
      "action": {
        "pass": "applications/webapp"
      }
    },
    {
      "action": {
        "share": "/var/www/html$uri",
        "fallback": {
          "pass": "applications/webapp"
        }
      }
    }
  ],
  "applications": {
    "webapp": {
      "type": "php",
      "root": "/var/www/html/"
    }
  }
}